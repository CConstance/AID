{
    "coverageThreshold": {
        "global": {
            "branches": 70,
            "functions": 25,
            "lines": 70,
            "statements": 70
        }
    },
    "coverageDirectory": "coverage",
    "coverageReporters": [
        "text",
        "lcov"
    ],
    "globals": {
        "ts-jest": {
            "tsConfigFile": "tsconfig.json"
        }
    },
    "moduleFileExtensions": [
        "ts",
        "js"
    ],
    "transform": {
        "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
        "**/*.spec.ts"
    ],
    "testEnvironment": "node"
}